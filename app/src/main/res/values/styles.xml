<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DayHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textColor">#efb171</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="NumberText" parent="TextAppearance.AppCompat">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="greyNumberText" parent="TextAppearance.AppCompat">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#636363</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

</resources>
